<%= form_for(['admin',@list]) do |f| %>
<div class="box-body">
  <div class="col-md-5">
    <div class="form-group has-error">
      <label>备注</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-vcard"></i>
        </div>
        <%= f.text_field :label, class:'form-control', placeholder:'（必填* 备注说明）' %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>端口</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-cube"></i>
        </div>
        <%= f.text_field :server_port, class:'form-control', placeholder:'（必填* 访问端口）' %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>密码</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-lock"></i>
        </div>
        <%= f.text_field :password, class:'form-control', placeholder:'（必填* 认证密码）' %>
      </div>
    </div>
    <div class="form-group has-error">
      <label>分配流量</label>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-lock"></i>
        </div>
        <%= f.text_field :total_bytes, class:'form-control', placeholder:'（必填* 可使用的流量）' %>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <hr>
    <div>
      <button type="submit" class="btn bg-maroon btn-flat" style="width: 120px">提交</button>
      <a href="<%= request.referrer %>" class="btn bg-navy btn-flat" style="width: 120px">取消</a>
    </div>
  </div>
</div>
<% end %>